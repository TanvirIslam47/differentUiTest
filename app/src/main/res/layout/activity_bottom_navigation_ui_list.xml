<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bottomNavigation.BottomNavigationUiListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottomNav1Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/teal_700"
                android:padding="8dp"
                android:text="SmoothBottomNav"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/bottomNav2Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/teal_700"
                android:padding="8dp"
                android:text="Material Bottom Nav"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/bottomNav3Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/teal_700"
                android:padding="8dp"
                android:text="Material Bottom Nav Fragment test"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:background="?attr/selectableItemBackgroundBorderless" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>